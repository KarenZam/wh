<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :username, class: "sr-only" %>
    <%= f.text_field :username, placeholder: "Username" %>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn" %>
  </div>
<% end %>