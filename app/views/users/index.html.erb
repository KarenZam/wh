<div class="row">
  <div class="col-md-12">
    <h1>Users</h1>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Profiles</th>
          <th>Active?</th>
          <th>Admin?</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th><%= link_to user.username, user_url(user) %></th>
            <td><%= user.email %></td>
            <td>
              <% if user.profiles.empty? %>
                None yet
              <% else %>
                <% user.profiles.each do |profile| %>
                  <div><%= link_to profile.name, profile_url(profile) %></div>
                <% end %>
              <% end %>
            </td>
            <td><%= boolean_to_yesno( user.is_active ) %></td>
            <td><%= boolean_to_yesno( user.is_admin ) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>