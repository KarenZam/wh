<div id="contact-us" class="container">
  <div class="row">
    <div class="span12 contact">
      <h3>Contact us!</h3>
    </div>
  </div>
  <div class="row">
    <div class="span8 offset2 contact-form">
      <h4>We want to hear from you</h4>
      <%= form_for :message, url: messages_url, html: { class: "contact" } do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, class: "contact-email", placeholder: "Email..." %>
        </div>
        <div class="form-group">
          <%= f.label :subject, class: "sr-only" %>
          <%= f.text_field :subject, class: "contact-subject", placeholder: "Subject..." %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Message", class: "sr-only" %>
          <%= f.text_area :body, class: "contact-subject", placeholder: "Message..." %>
        </div>
        <div class="form-group">
          <%= f.submit "Send" %>
        </div>
      <% end %>
    </div>
  </div>
</div>