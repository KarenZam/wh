<article id="contact-us" class="container contact-us">
  <header class="row">
    <div class="col-md-12">
      <h2>Contact us</h2>
    </div>
  </header>
  <section class="row">
    <div class="col-md-8 col-md-offset-2">
      <form accept-charset="UTF-8" action="<%= contacts_url %>" id="contact-form" method="post">
        <fieldset>
          <legend>Want to know more ? We'd love to hear from you!</legend>
          <div class="contact error-message"></div>
          <div class="input-group">
            <label for="contact_email" class="sr-only">Email</label>
            <input type="email" id="contact_email" name="email" placeholder="Email..." class="form-control" required>
          </div>
          <div class="input-group">
            <label for="contact_subject" class="sr-only">Subject</label>
            <input type="text" id="contact_subject" name="subject" placeholder="Subject..." class="form-control" required>
          </div>
          <div class="input-group">
            <label for="contact_message" class="sr-only">Message</label>
            <textarea id="contact_message" name="message" placeholder="Message..." class="form-control"></textarea>
          </div>
          <div class="input-group">
            <input type="submit" name="commit" value="Send" class="btn">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          </div>
        </fieldset>
      </form>
      <div class="contact success-message"></div>
    </div>
  </section>
</article>