<div class="col-md-8 col-sm-12">
  <%= form_for @article, :html => { multipart: true } do |f| %>
    <legend>
      <% if @article.persisted? %>
        Update <em><%= @article.title %></em>
      <% else %>
        Add a new article
      <% end %>
    </legend>
    <div class="form-group">
      <%= f.label :title, class: "sr-only" %>
      <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body, class: "sr-only" %>
      <%= f.text_area :body, placeholder: "Add content here (markdown enabled)", class: "form-control", style: "width: 100%; height: 300px" %>
    </div>
    <div class="form-group">
      <%= f.label :blog_image, "Image", class: "sr-only" %>
      <%= f.file_field :blog_image, placeholder: "Upload an image", class: "form-control" %>
      <%= f.hidden_field :blog_image_cache %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-danger" %>
    </div>
    <div class="form-group">
      <%= image_tag(@article.blog_image_url) if @article.blog_image? %>
    </div>
  <% end %>
</div>