<h1>Messages</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Subject</th>
      <th>Received</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.email %></td>
        <td><%= if message.user then message.user.name else "Unregistered" end %></td>
        <td><%= message.subject %></td>
        <td><%= message.created_at.strftime("%-I:%M on %a, %-d %b %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>